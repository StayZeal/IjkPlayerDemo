<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mini_player_open_vip_tip_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="#e63e3a39"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mini_player_back"
        android:layout_width="95px"
        android:layout_height="97px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="35px"
        android:paddingTop="37px"
        android:src="@drawable/mini_player_empty_back" />


    <LinearLayout
        android:id="@+id/mini_player_vip_btn_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="70px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/re_browse_btn"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:background="@drawable/black_round_btn_bg"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="27px"
            android:paddingRight="27px"
            android:text="重新试看"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40" />

        <TextView
            android:id="@+id/open_vip_view"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_marginLeft="36px"
            android:background="@drawable/red_round_btn_bg"
            android:gravity="center"
            android:paddingLeft="27px"
            android:paddingRight="27px"
            android:text="开通会员看完整版"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40" />

    </LinearLayout>

    <TextView
        android:id="@+id/open_vip_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mini_player_vip_btn_LL"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:gravity="center"
        android:text="试看结束，开通会员可观看全部课程"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_40" />
</RelativeLayout>